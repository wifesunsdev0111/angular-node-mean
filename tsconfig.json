{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@app/*": ["src/app/*"]
    },
    "target": "ES2022",
    "typeRoots": ["node_modules/@types"],
    "lib": ["ESNext", "DOM"],
    "module": "es2020",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "declaration": false,
    "importHelpers": true,
    "experimentalDecorators": true,
    "suppressImplicitAnyIndexErrors": true,
    "useDefineForClassFields": false
  }
}
